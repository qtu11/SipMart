# ===========================================
# CupSipSmart Environment Variables Template
# Copy this to .env.local and fill in values
# ===========================================

# ========== VNPAY CONFIGURATION ==========
# IMPORTANT: Never commit actual credentials!

# VNPay Merchant Code (from VNPay dashboard)
VNP_TMN_CODE=YOUR_TMN_CODE_HERE

# VNPay Hash Secret (from VNPay dashboard) 
VNP_HASH_SECRET=YOUR_HASH_SECRET_HERE

# VNPay Payment Gateway URL
# Sandbox: https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
# Production: https://pay.vnpay.vn/vpcpay.html
VNP_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html

# Return URL after payment (user is redirected here)
VNP_RETURN_URL=http://localhost:3000/payment/vnpay-return

# IPN URL for server-to-server callback
VNP_IPN_URL=http://localhost:3000/api/payment/vnpay_ipn

# ========== SUPABASE CONFIGURATION ==========
# Get these from your Supabase project settings

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ========== FIREBASE CONFIGURATION ==========
# Get these from Firebase console

NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef

# ========== ADMIN CONFIGURATION ==========
# Strong secret for cron jobs and admin operations

ADMIN_CRON_SECRET=generate-a-strong-random-secret-here

# Admin credentials (change in production!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-strong-password

# ========== APP CONFIGURATION ==========

# Deposit amount in VND
NEXT_PUBLIC_DEPOSIT_AMOUNT=20000

# Environment
NODE_ENV=development

# Enable logging in production (optional)
ENABLE_LOGGING=false

# ========== OPTIONAL: MONITORING ==========
# Sentry DSN for error tracking
# SENTRY_DSN=https://xxx@sentry.io/xxx

# ========== NOTES ==========
# 1. For VNPay production, contact VNPay to get real credentials
# 2. Update VNP_RETURN_URL and VNP_IPN_URL with your production domain
# 3. VNP_IPN_URL must be publicly accessible
# 4. Use strong, unique values for all secrets
